<Window
	x:Class="PredatorSense.LoadingPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="PredatorSense           "
	Height="400"
	Width="560"
	AllowsTransparency="True"
	ResizeMode="CanMinimize"
	WindowStyle="None"
	Background="#00FFFFFF"
	FontFamily="Segoe UI" xmlns:predatorsense="clr-namespace:PredatorSense"
	Loaded="Window_Loaded"
	StateChanged="Window_StateChanged">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary
					Source="Style\100\PSStyle.xaml" />
				<ResourceDictionary
					Source="Lang\en.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Viewbox
		x:Name="wndViewbox"
		Stretch="Uniform">
		<Grid
			x:Name="Main_Grid"
			Width="560"
			Height="400">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="80" />
				<RowDefinition
					Height="10" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="13" />
				<ColumnDefinition
					Width="7" />
				<ColumnDefinition
					Width="13" />
				<ColumnDefinition
					Width="102" />
			</Grid.ColumnDefinitions>
			<Image
				x:Name="splash_Image"
				Grid.Column="0"
				Grid.Row="0"
				Width="560"
				Height="400"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
                Source="/app_icon.ico"
                Grid.RowSpan="{Binding Path=RowDefinitions.Count, ElementName=Main_Grid}"
				Grid.ColumnSpan="{Binding Path=ColumnDefinitions.Count, ElementName=Main_Grid}" />
			</Grid>
	</Viewbox>
</Window>
