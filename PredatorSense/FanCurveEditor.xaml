<Window x:Class="PredatorSense.FanCurveEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fan Curve Editor" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="FanCurveGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Temperature (Â°C)" Binding="{Binding Temperature}" Width="*"/>
                <DataGridTextColumn Header="Fan Speed (%)" Binding="{Binding FanSpeed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Apply" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="Apply_Click"/>
    </Grid>
</Window>